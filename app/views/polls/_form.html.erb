  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, {:disabled=>(defined? disabled and disabled)} %>
    <% if f.object.id.nil? %>
     <%= link_to_remove_unique_fields t(:destroy),f %>
    <% else %>
      <%= f.check_box :_destroy, {:disabled=>(defined? disabled and disabled)} %>
      <%= f.label :_destroy, t(:destroy) %>
    <% end %>
    <fieldset>
      <legend><%= t(:answer) %></legend>
      <%= new_subobject_div t(:add_answer),f,:answers %>
      <%= f.fields_for :answers do |builder| %>
        <%= render :partial => 'answers/form', :locals => { :f => builder } %>
      <% end %>
    </fieldset>
  </div>
