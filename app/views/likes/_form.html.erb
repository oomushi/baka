<% like = message.like_it?(current_user) ? message.like_by(current_user) : Like.new %>
<%= form_for like do |f| %>
  <%= f.hidden_field :message_id,:value=> message.id %>
  <%= f.hidden_field :user_id,:value=> current_user.id %>
  <%= f.hidden_field :value,:value=> 1 %>
  <% if like.value>0 %>
    <a class="button up checked">+1</a>
  <% else %>
    <%= link_to_submit '+1',{:class => "button up"} %>
  <% end %>
<% end %>
<%= form_for like do |f| %>
  <%= f.hidden_field :message_id,:value=> message.id %>
  <%= f.hidden_field :user_id,:value=> current_user.id %>
  <%= f.hidden_field :value,:value=> -1 %>
  <% if like.value<0 %>
    <a class="button down checked">-1</a>
  <% else %>
      <%= link_to_submit '-1',{:class => "button down"} %>
  <% end %>
<% end %>
