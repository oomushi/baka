<% like = message.like_it?(current_user) ? message.like_by(current_user) : Like.new %>
<%= form_for like do |f| %>
  <%= f.hidden_field :message_id,value: message.id %>
  <%= f.hidden_field :user_id,value: current_user.id %>
  <%= f.hidden_field :value,value: 1 %>
  <% if like.value>0 %>
    <%= link_to_void image_tag("theme-default/up.svg", alt: "up"),{class: "button up checked", title: '+1'} %>
  <% else %>
    <%= link_to_void image_tag("theme-default/up.svg", alt: "up"),{class: "button up likes", title: '+1'} %>
  <% end %>
<% end %>
