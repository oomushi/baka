<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <details open="open">
      <summary><%= t(:header_error_user) %></summary>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </details>
    <div class="clear"></div>
  <% end %>
  <div class="field2">
    <%= f.fields_for :avatar do |builder| %>
      <%= render partial: 'avatars/form',locals: { f: builder } %>
    <% end %>
  </div>
  <div class="field2">
    <fieldset>
      <legend><%= t(:contacts) %></legend>
      <%= new_subobject_div t(:add_contacts),f,:contacts %>
      <%= f.fields_for :contacts do |builder| %>
        <%= render partial: 'contacts/form', locals: { f: builder } %>
      <% end %>
    </fieldset>
  </div>
  <div class="clear"></div>
  <div class="field2">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, start_year: Date.today.year-150, end_year: Date.today.year %>
  </div>
  <div class="field2">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="clear"></div>
  <div class="field">
    <%= f.label :sign %><br />
    <%= f.text_area :sign, rows: 6 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
