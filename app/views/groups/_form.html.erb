<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.number_field :level %>
  </div>
  <div class="field">
    <%= f.label :users %>
    <%= search_field_tag 'users' %>
  </div>
  <fieldset id="habtm">
  <% @group.users.each do |user| %>
    <%= check_box_tag "group[user_ids][]", user.id, true %>
    <%= user.username %><br/>
  <% end %>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
