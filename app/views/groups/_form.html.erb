<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.select(:group_id, Group.all.map{|g| [g.name,g.id]}, {:include_blank =>'None'}) %>
  </div>
  <div class="field">
    <%= f.label :users %>
    <%= f.search_field :users,:value=>'' %>
    <fieldset id="habtm">
    <% @group.users.each do |user| %>
      <%= check_box_tag "group[user_ids][]", user.id, true %>
      <%= user.username %><br/>
    <% end %>
    </fieldset>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
