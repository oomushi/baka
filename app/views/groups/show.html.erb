<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @group.name %>
</p>

<p>
  <b>Group:</b>
  <%= @group.group unless @group.group.nil? %>
</p>

<p>
  <b>Users:</b>
  <% @group.users.take(5).each do |u| %>
    <%= u.username %><br/>
  <% end %>
  <%= '...' if @group.users.count>5 %>
</p>
<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
